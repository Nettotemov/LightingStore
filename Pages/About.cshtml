@page "/about/{Id:long?}"
@model About

@{
	Layout = "_Layout";
	ViewData["Title"] = "О компании";
	ViewData["Breadcrumb"] = await Component.InvokeAsync("BreadcrumbSummary", new [] { (url: "/", page: "Главная"),
		(url: @Model.AboutPage.Id.ToString(), page: "О компании") });
}


<div class="col-12 mt-10 pt-per-5">
	<div class="scroll-m row justify-content-between align-items-xl-center">
		<div class="col-12 col-xl-6">
			<div class="black-img__wrapper">
				<div class="black-img">
					<h1 class="black-img-h">Lights 4 Apart</h1>
					<p class="black-img-p">WE CREATE LIGHT</p>
				</div>
			</div>
		</div>
		<div class="hook col-md-12 col-xl-5">
			<h1 class="p__caption mb-per-5">@Model.AboutPage.Heading</h1>
		</div>
	</div>
</div>


<div class="scroll-m col-12 mb-per-5 mt-per-5">
	<div class="row justify-content-between align-items-xl-center">
		<div class="hook col-md-12 col-xl-5 order-block-2">
			<h2 class="p__caption mt-4 mb-per-5">@Model.AboutPage.Paragraph</h2>
		</div>
		<div class="col-12 col-xl-6 order-block-1">
			<div class="img-center__wrapper">
				<img class="img-responsive" src="@Model.AboutPage.ImgOneUrl" alt="@Model.AboutPage.Heading">
			</div>
		</div>
	</div>
</div>

@if (@Model.AdditionalBlocks is not null)
{
	@for (var i = 0; i < @Model.AdditionalBlocks.Count; i++)
	{
		@if (i % 2 == 0)
		{
			<div class="scroll-m col-12 mb-per-5 mt-per-5">
				<div class="row justify-content-between align-items-xl-center">
					<div class="col-12 col-xl-6">
						<div class="img-center__wrapper">
							<img class="img-responsive" src="@Model.AdditionalBlocks[i].Img" alt="@Model.AdditionalBlocks[i].Caption">
						</div>
					</div>
					<div class="hook col-md-12 col-xl-5">
						<h2 class="h1__caption mb-per-5">@Model.AdditionalBlocks[i].Caption</h2>
						<p class="p__caption mb-per-5">@Model.AdditionalBlocks[i].Description</p>
					</div>
				</div>
			</div>
		}
		else
		{
			<div class="scroll-m col-12 mb-per-5 mt-per-5">
				<div class="row justify-content-between align-items-xl-center">
					<div class="hook col-md-12 col-xl-5">
						<h2 class="h1__caption mb-per-5">@Model.AdditionalBlocks[i].Caption</h2>
						<p class="p__caption mb-per-5">@Model.AdditionalBlocks[i].Description</p>
					</div>
					<div class="col-12 col-xl-6">
						<div class="img-center__wrapper">
							<img class="img-responsive" src="@Model.AdditionalBlocks[i].Img" 
							     alt="@Model.AdditionalBlocks[i].Caption">
						</div>
					</div>
				</div>
			</div>
		}
	}
	
	@if (Model.AdditionalBlocks.Count % 2 == 0)
	{
		<div class="scroll-m col-12 mb-per-5 mt-per-5">
			<div class="row justify-content-between align-items-xl-center">
				<div class="col-12 col-xl-6 order-block-1">
					<div class="black-img__wrapper">
						<div class="black-img">
							<p class="black-img-p">Create with</p>
							<h3 class="black-img-h">Lights 4 Apart</h3>
						</div>
					</div>
				</div>	
				<div class="hook col-md-12 col-xl-5 order-block-2">
					<h2 class="h1__caption mb-per-5">Подберите идеальный свет для вашего интерьера!</h2>
				</div>
			</div>
		</div>
	}
	else
	{
		<div class="scroll-m col-12 mb-per-5 mt-per-5">
			<div class="row justify-content-between align-items-xl-center">
				<div class="hook col-md-12 col-xl-5 order-block-2">
					<h2 class="h1__caption mb-per-5">Подберите идеальный свет для вашего интерьера!</h2>
				</div>
				<div class="col-12 col-xl-6 order-block-1">
					<div class="black-img__wrapper">
						<div class="black-img">
							<p class="black-img-p">Create with</p>
							<h3 class="black-img-h">Lights 4 Apart</h3>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
}


